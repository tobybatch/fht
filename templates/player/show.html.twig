{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Network</th>
                <td>{{ player.network }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ player.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('player_index') }}">back to list</a>

    <a href="{{ path('player_edit', {'id': player.id}) }}">edit</a>

    <table class="table">
        <tbody>
            <tr>
                {{ include('stat/th.html.twig') }}
            </tr>
            {% for stat in stats %}
                <tr>
                    {{ include('stat/tr.html.twig') }}
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
